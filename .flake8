[flake8]
application_import_names = api, common, devices, settings
exclude = **/__init__.py, **/migrations/, .venv/, setup/, src/settings/local*.py

inline-quotes = double

# B901 blind except: statement (duplicate of E722)
# E501 line too long
# H601 class has low cohesion
# Q003 Change outer quotes to avoid escaping inner quotes
# W503 line break before binary operator
# W504 line break after binary operator
ignore = B901, E501, H601, Q003, W503, W504
